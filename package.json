{
  "name": "vue-start",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  
  "scripts": {
    "dev": "cp env/env.dev .env && vite --mode dev",
    "clean:dist": "rimraf dist",
    "build": "vue-tsc && vite-ssg build",
    "build:dev": "pnpm clean:dist && cp env/env.dev .env && vite-ssg build --mode development",
    "build:prod": "pnpm clean:dist && cp env/env.prod .env && vite-ssg build --mode prod",
    "prod": "npm run format && npm run type && npm run lint:fix && npm run build:prod",
    "lint": "eslint \"**/*.vue\"",
    "lint:fix": "eslint \"**/*.vue\" --fix",
    "preview": "vite preview",
    "prepare": "husky install",
    "type": "vue-tsc",
    "test:e2e": "",
    "test": "vitest --run --coverage -u",
    "test:unit": "vitest --ui",
    "format": "prettier -w ./src",
    "git:short": "git add . && git cz && git push",
    "git": "npm run prod && npm run git:short"
  },

  "dependencies": {
    "@vueuse/core": "^9.13.0",
    "@vueuse/head": "^1.1.5",
    "pinia": "^2.0.32",
    "vue": "^3.2.47",
    "vue-router": "^4.1.6"
  },
  "devDependencies": {
    "@iconify/json": "^2.2.27",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@tailwindcss/typography": "^0.5.9",
    "@tsconfig/node18": "^1.0.1",
    "@types/glob": "^7.2.0",
    "@types/markdown-it-link-attributes": "^3.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^17.0.45",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vitest/coverage-c8": "^0.29.2",
    "@vitest/ui": "^0.29.2",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/test-utils": "^2.3.0",
    "autoprefixer": "^10.4.13",
    "commitlint-config-cz": "^0.13.3",
    "critters": "^0.0.16",
    "cz-conventional-changelog": "^2.1.0",
    "cz-customizable": "^6.9.2",
    "daisyui": "^2.51.0",
    "dotenv-cli": "^7.0.0",
    "eslint": "^8.34.0",
    "eslint-plugin-vue": "^9.9.0",
    "husky": "^8.0.3",
    "jsdom": "^21.1.0",
    "lint-staged": "^13.1.2",
    "postcss": "^8.4.21",
    "prettier": "^2.8.4",
    "prettier-eslint-cli": "^7.1.0",
    "prettier-plugin-tailwindcss": "^0.2.3",
    "rimraf": "^4.1.2",
    "tailwindcss": "^3.2.7",
    "typescript": "^4.9.5",
    "unplugin-auto-import": "^0.15.0",
    "unplugin-icons": "^0.15.3",
    "unplugin-vue-components": "^0.24.0",
    "vite": "^4.1.4",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-inspect": "^0.7.15",
    "vite-plugin-pwa": "^0.14.4",
    "vite-ssg": "^0.22.1",
    "vitest": "^0.29.2",
    "vue-tsc": "^1.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "cz-customizable": {
      "config": "./.cz-config.js"
    }
  },
  "lint-staged": {
    "src/**.{js,json,md,vue}": [
      "eslint --fix --color --ignore-path .eslintignore",
      "prettier --write"
    ]
  }
}
